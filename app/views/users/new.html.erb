<center><h3>Register a New User</h3></center>

<center><%= form_with url: "/users/#{@user.id}", method: :post, local: true do |f| %>
  <p><%= f.label 'Name:' %>
  <%= f.text_field :name %></p>

  <p><%= f.label 'Email:' %>
  <%= f.text_field :email %></p>

  <p><%= f.label 'Password:' %>
  <%= f.text_field :password %></p>

  <p><%= f.label 'Confirm Password:' %>
  <%= f.text_field :password_confirmation %></p>

  <%= f.submit 'Create New User' %>
<% end %></center>